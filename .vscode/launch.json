{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Attach to Gradle Debug",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005,
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "$Libraries"
                ]
            }
        }
    ]
}
